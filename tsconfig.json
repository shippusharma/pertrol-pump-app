{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "nativewind-env.d.ts", "global.d.ts"],
  "exclude": [
    ".expo",
    "android",
    "ios",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "__tests__",
    "tsconfig.tsbuildinfo",
    "build",
    "dist",
    "out",
    "logs",
    ".husky",
    ".vscode",
    ".idea",
    ".turbo",
    ".serverless",
    "public",
    "uploads",
    "loadtest.mjs",
    "autocannonWithMonitoring.mjs",
    "**/*handler.ts",
    "**/*lambda/**/*"
  ]
}
