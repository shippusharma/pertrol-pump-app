{
  "expo": {
    "name": "petrol-pump-app",
    "slug": "petrol-pump-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/pump.png",
    "scheme": "petrolpumpapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shippugloitel.petrolpumpapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/pump.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.shippugloitel.petrolpumpapp"
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/pump.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "http://localhost:8081/api" // for backend api
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/pump.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "82ac8d93-c8e5-40e4-8d1f-a0332cba2702"
      }
    }
  }
}