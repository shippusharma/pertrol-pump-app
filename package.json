{
  "name": "petrol-pump-app",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "dev": "EXPO_NO_TELEMETRY=1 expo start",
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "doctor": "expo doctor",
    "prebuild": "expo prebuild",
    "expo:lint": "expo lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx,cjs,mjs,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,js,jsx,cjs,mjs,json,yml,yaml}\"",
    "clean": "rm -rf node_modules .expo .expo-shared dist android/build ios/build && bun cache clean",
    "reset": "expo start -c",
    "bundle:android": "bunx expo export --platform android --output-dir android/app/src/main/assets",
    "build:android:apk": "bun run bundle:android && cd android && ./gradlew assembleRelease",
    "build:android:aab": "bun run bundle:android && cd android && ./gradlew bundleRelease",
    "build:android:debug": "cd android && ./gradlew assembleDebug",
    "clean:android": "cd android && ./gradlew clean",
    "clean:all": "bun run clean && cd android && ./gradlew clean",
    "lint-staged": "lint-staged --concurrent false",
    "pretty-quick": "pnpx pretty-quick --staged",
    "prepare": "rm -rf .husky && husky install && husky add .husky/post-merge \"bun install\" && husky add .husky/pre-commit \"bun lint-staged\""
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,cjs,mjs,mts}": [
      "bun run format",
      "bun run lint"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "expo": "53.0.22",
    "expo-blur": "~14.1.5",
    "expo-constants": "^17.1.7",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-image-picker": "^16.1.4",
    "expo-linking": "~7.1.7",
    "expo-location": "^18.1.6",
    "expo-router": "~5.1.5",
    "expo-secure-store": "~14.2.4",
    "expo-splash-screen": "~0.30.10",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.11",
    "expo-web-browser": "~14.2.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react-native": "^0.534.0",
    "mongoose": "^8.17.0",
    "nodemailer": "^7.0.5",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.61.1",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "zod": "^4.0.14",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@eslint/js": "^9.32.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.1",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "~19.0.10",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "eslint-config-expo": "~9.2.0",
    "eslint-config-universe": "^15.0.3",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0"
  },
  "private": true
}
